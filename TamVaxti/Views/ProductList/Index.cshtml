                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                   href="#">3</a>
                                                            </li>
                                                            <li class="page-item">
                                                                <a class="page-link" href="#"
                                                                   aria-label="Next">
                                                                    <span aria-hidden="true">
                                                                        <i class="fa fa-chevron-right"
                                                                           aria-hidden="true"></i>
                                                                    </span> <span class="sr-only">Next</span>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </nav>
                                                </div>
                                                <div class="col-xl-6 col-md-6 col-sm-12">
                                                    <div class="product-search-count-bottom">
                                                        <h5>Showing Products 1-24 of 10 Result</h5>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- section End -->

@section js {
    <!-- price range js -->
    <script src="~/assets/js/price-range.js"></script>

    <script>
        function updateModel() {
            var priceRange = $(".js-range-slider").val();
            var selectedCategoryIds = Array.from(document.querySelectorAll('.category-filter-checkbox:checked'), checkbox => parseInt(checkbox.value));

            fetch('@Url.Action("FilterProducts", "ProductList")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ selectedCategoryIds: selectedCategoryIds, priceRange: priceRange })
            })
                .then(response => response.text())
                .then(html => {
                    document.getElementById('product-list').innerHTML = html;
                    initializeWishlist();
                });
        }

        $(".js-range-slider").on('change', updateModel);
    </script>

}

