@model TamVaxti.Models.BlogSidebarViewModel

@section js{
    <script src="~/js/blog.js"></script>
}

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>Blog</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Blog</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!-- section start -->
<section class="section-b-space blog-page ratio2_3">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 col-lg-8 col-md-7">
                @await Html.PartialAsync("_BlogsPartial", Model.Blogs)
            </div>
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="blog-sidebar">
                    <div class="theme-card">
                        <h4>Recent Blog</h4>
                        <ul class="recent-blog">
                            @foreach (var blog in Model.RecentBlogs)
                            {
                                <li>
                                    <div class="media">
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">
                                            <img class="img-fluid blur-up lazyload"
                                                 src="@Url.Content($"~/img/Blog/{blog.Image}")" alt="@blog.Title">
                                            </a>
                                            <div class="media-body align-self-center">
                                                <h6>@blog.Date.ToString("dd MMM yyyy")</h6>
                                                <p>@blog.Hits hits</p>
                                            </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="theme-card">
                        <h4>Popular Blog</h4>
                        <ul class="popular-blog">
                            @foreach (var blog in Model.PopularBlogs)
                            {
                                <li>
                                    <div class="media">
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">
                                            <div class="blog-date"><span>@blog.Date.ToString("dd")</span><span>@blog.Date.ToString("MMM")</span></div>
                                            </a>
                                            <div class="media-body align-self-center">
                                                <h6>@blog.Title</h6>
                                                <p>@blog.Hits hits</p>
                                            </div>
                                    </div>
                                   
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- section end -->
