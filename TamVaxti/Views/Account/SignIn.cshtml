@model LoginVM

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>customer's login</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Home</a>
                        </li>
                        <li class="breadcrumb-item active">login</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->

    <section class="login-page section-b-space">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h3>Login</h3>
                    <div class="text-danger" asp-validation-summary="ModelOnly">
                    </div>
                    <div class="theme-card">
                        <form class="theme-form" method="post" asp-action="SignIn">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input asp-for="EmailOrUsername" type="text" class="form-control" id="email" placeholder="Email" required="">
                                <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
                            </div>
                            <div class="form-group">
                                <label for="review">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="review"
                                       placeholder="Enter your password" required="">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div> 
                            <div class="col-md-12 mb-2 d-flex justify-content-end ">
                              <a style="color: #1879f7;cursor: pointer;" asp-action="ForgotPassword">Forgot Password</a>
                            </div>
                            <button type="submit" class="btn btn-solid">Sign In</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 right-login">
                    <h3>New Customer</h3>
                    <div class="theme-card authentication-right">
                        <h6 class="title-font">Create A Account</h6>
                        <p>
                            Sign up for a free account at our store. Registration is quick and easy. It allows you to be
                            able to order from our shop. To start shopping click register.
                        </p>
                    <a asp-controller="Account" asp-action="SignUp"
                           class="btn btn-solid">
                            Create an Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!--Section ends-->