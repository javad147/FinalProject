@model TamVaxti.Models.Coupon

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            Edit Coupon
                            <small>Multikart Admin panel</small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Home")">
                                <i data-feather="home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Coupons" asp-action="List">
                               Coupons
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Edit Coupon</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="card tab2-card">
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Coupons", FormMethod.Post, new { @class = "needs-validation", novalidate = "" }))
                {
                    @Html.HiddenFor(model => model.Id)

                    <ul class="nav nav-tabs tab-coupon" id="myTab" role="tablist">
                        <li class="nav-item"><a class="nav-link active show" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a></li>
                        <li class="nav-item"><a class="nav-link" id="restriction-tabs" data-bs-toggle="tab" href="#restriction" role="tab" aria-controls="restriction" aria-selected="false">Restriction</a></li>
                        <li class="nav-item"><a class="nav-link" id="usage-tab" data-bs-toggle="tab" href="#usage" role="tab" aria-controls="usage" aria-selected="false">Usage</a></li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade active show" id="general" role="tabpanel" aria-labelledby="general-tab">
                            <h4>General</h4>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.CouponTitle, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.CouponTitle, new { @class = "form-control", required = "required" })
                                            @Html.ValidationMessageFor(model => model.CouponTitle, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.CouponCode, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.CouponCode, new { @class = "form-control", required = "required", @readonly = "readonly", id = "CouponCode" })
                                            @Html.ValidationMessageFor(model => model.CouponCode, null, new { @class = "text-danger" })
                                            <button type="button" class="btn btn-primary mt-2" onclick="generateCouponCode()">Generate Code</button>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.StartDate, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.StartDate, "{0:yyyy-MM-dd}", new { @class = "datepicker-here form-control digits", data_language = "en", min = "1753-01-01", max = "9999-12-31", required = "required" })
                                            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.EndDate, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.EndDate, "{0:yyyy-MM-dd}", new { @class = "datepicker-here form-control digits", data_language = "en", min = "1753-01-01", max = "9999-12-31", required = "required" })
                                            @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.AllowFreeShipping, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.CheckBoxFor(model => model.AllowFreeShipping, new { @id = "checkbox-primary-1", @class = "checkbox checkbox-primary" })
                                            @Html.Label("checkbox-primary-1", "Allow Free Shipping")
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.Quantity, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", required = "required", type = "number" })
                                            @Html.ValidationMessageFor(model => model.Quantity, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.DiscountType, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.DropDownListFor(model => model.DiscountType, new SelectList(new[] { "Percent", "Fixed" }), "--Select--", new { @class = "custom-select w-100 form-control", required = "required" })
                                            @Html.ValidationMessageFor(model => model.DiscountType, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.DiscountValue, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(model => model.DiscountValue, new { @class = "form-control", required = "required", type = "number" })
                                            @Html.ValidationMessageFor(model => model.DiscountValue, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.IsEnabled, new { @class = "col-xl-3 col-md-4" })
                                        <div class="col-md-7">
                                            @Html.CheckBoxFor(model => model.IsEnabled, new { @id = "checkbox-primary-2", @class = "checkbox checkbox-primary" })
                                            @Html.Label("checkbox-primary-2", "Enable the Coupon")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="restriction" role="tabpanel" aria-labelledby="restriction-tabs">
                            <h4>Restriction</h4>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Products, new { @class = "col-xl-3 col-md-4" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.Products, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Products, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Category, new { @class = "col-xl-3 col-md-4" })
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.Category, new SelectList(new[] { "Electronics", "Clothes", "Shoes", "Digital" }), "--Select--", new { @class = "custom-select w-100 form-control" })
                                    @Html.ValidationMessageFor(model => model.Category, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.MinimumSpend, new { @class = "col-xl-3 col-md-4" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.MinimumSpend, new { @class = "form-control", type = "number" })
                                    @Html.ValidationMessageFor(model => model.MinimumSpend, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.MaximumSpend, new { @class = "col-xl-3 col-md-4" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.MaximumSpend, new { @class = "form-control", type = "number" })
                                    @Html.ValidationMessageFor(model => model.MaximumSpend, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="usage" role="tabpanel" aria-labelledby="usage-tab">
                            <h4>Usage</h4>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.PerLimit, new { @class = "col-xl-3 col-md-4" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.PerLimit, new { @class = "form-control", type = "number" })
                                    @Html.ValidationMessageFor(model => model.PerLimit, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.PerCustomer, new { @class = "col-xl-3 col-md-4" })
                                <div class="col-md-7">
                                    @Html.TextBoxFor(model => model.PerCustomer, new { @class = "form-control", type = "number" })
                                    @Html.ValidationMessageFor(model => model.PerCustomer, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pull-right mt-3">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

<script>function generateCouponCode() {
        const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
        let code = '';
        for (let i = 0; i < 10; i++) {
            code += characters.charAt(Math.floor(Math.random() * characters.length));
        }
        document.getElementById('CouponCode').value = code;
    }

    document.addEventListener('DOMContentLoaded', function () {
        flatpickr(".datepicker-here", {
            dateFormat: "Y-m-d",
        });
    });</script>
