@model ProductDetailVM

<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-6">
                <div class="border rounded-4 mb-3 d-flex justify-content-center">
                    <a data-fslightbox="mygalley" class="rounded-4" target="_blank" data-type="image" href="https://mdbcdn.b-cdn.net/img/bootstrap-ecommerce/items/detail1/big.webp">
                        <img style="max-width: 100%; max-height: 100vh; margin: auto; border:3px double green" class="rounded-4 fit" src="~/img/@Model.Images.FirstOrDefault(m=>m.IsMain).Image" />
                    </a>
                </div>
                <div class="d-flex justify-content-center mb-3">
                    @foreach (var item in Model.Images.Where(m=>!m.IsMain))
                    {
                        <a data-fslightbox="mygalley" class="border mx-1 rounded-2" target="_blank" data-type="image" href="https://mdbcdn.b-cdn.net/img/bootstrap-ecommerce/items/detail1/big1.webp" class="item-thumb">
                            <img width="90" height="90" class="rounded-2" src="~/img/@item.Image" />
                        </a>
                    }
                </div>
                <!-- thumbs-wrap.// -->
                <!-- gallery-wrap .end// -->
            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h4 class="title text-dark">
                        @Model.Name
                    </h4>

                    <div class="mt-4 mb-3">
                        <span class="h5">$@Model.Price</span>
                        <span class="text-muted">/per box</span>
                    </div>

                    <p>
                        @Model.Description
                    </p>

                    <div class="row mt-3">
                        <dt class="col-3">Category:</dt>
                        <dd class="col-9">@Model.Category</dd>
                    </div>

                    <hr />
                    <a asp-area="Admin" asp-action="Index" class="btn btn-danger">Back</a>
                </div>
            </main>
        </div>
    </div>
</section>

