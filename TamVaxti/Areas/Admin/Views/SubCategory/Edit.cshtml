

@model TamVaxti.ViewModels.SubCategory.SubCategoryEditVM
@{
    ViewData["Title"] = "Edit Subcategory";
}

<style>
    .remove-icon {
        position: absolute;
        top: 0;
        right: 0;
        cursor: pointer;
        padding: 2px; /* Adjust as needed */
        border-radius: 50%; /* Optional: to make it round */
    }

        .remove-icon svg {
            display: block;
        }
</style>


<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Edit SubCategory
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Dashboard" asp-action="Index">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="SubCategory" asp-action="Index">
                            SubCategory
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>


