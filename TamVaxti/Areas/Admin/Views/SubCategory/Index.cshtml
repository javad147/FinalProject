@model List<SubCategoryVM>
@{
    ViewBag.PageName = "Subcategory Master";
}

<head>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
</head>



<style>
    .star-rating {
        display: inline-block;
        font-size: 0;
        position: relative;
    }

        .star-rating .star {
            display: inline-block;
            font-size: 20px;
            color: lightgray;
        }

            .star-rating .star.filled {
                color: gold;
            }

    .icon {
        font-size: 24px;
        color: gray;
    }

        .icon.check-circle {
            color: green;
        }

        .icon.x-circle {
            color: red;
        }

    .td-status {
        text-align: center;
        vertical-align: middle;
    }

    table {
        width: 100%;
    }

    svg {
        display: inline;
    }

    .search-form .form-group {
        margin-right: 10px;
    }

    .search-form .btn {
        margin-left: 5px;
    }

</style>



@if (TempData["message"] != null)
{
    <script type="text/javascript">
        $(document).ready(function () {

            var messageType = '@TempData["messageType"]';
            var message = '@TempData["message"]';
            if (messageType === "success") {
                toastr.success(message);
            } else if (messageType === "error") {
                toastr.error(message);
            }
        });
    </script>
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Subcategory
                        <small>Subcategory Information </small>
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Dashboard" asp-action="Index">
                            <i data-feather="home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item active"> Product / Subcategory </li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <a type="button" class="btn btn-primary add-row mt-md-0 mt-2" asp-action="Create">
                        Add Subcategory
                    </a>
                </div>
                <div class="card-header">
                    <form class="form-inline search-form" method="get" asp-action="Index">
                        <div class="input-group">
                            <input class="form-control" type="search" name="searchString" placeholder="Search.." value="@ViewData["CurrentFilter"]">
                            <div class="input-group-append mr-2">
                                <button type="submit" class="btn btn-primary ml-2">Search</button>
                                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                                {
                                    <button type="button" class="btn btn-secondary" onclick="clearSearch()">
                                        <i class="fa fa-times"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-body">
                    <div class="table-responsive table-desi">
                        <table class="table all-package table-subcategory " id="editableTable">
                            <thead>
                                <tr>

                                    <th align="left">Image</th>
                                    <th>Sub Category Name</th>
                                    <th>Category Name</th>
                                    <th class="td-status">Published</th>
                                    <th>Option</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @if (!string.IsNullOrEmpty(item.SubcategoryImage))
                                            {
                                                <img align="left" src="~/img/subcategories/@item.SubcategoryImage" alt="Subcategory Image" style="max-width: 100px; max-height: 100px;" />
                                            }
                                            else
                                            {
                                                <img align="left" src="~/img/no_img.jpg" alt="No SubCategory" style="max-width: 100px; max-height: 100px;" />

                                            }
                                        </td>


                                        <td data-field="name">@item.Name</td>
                                        <td class="text-align-left" data-field="category">@item.CategoryName</td>
                                        <td class="td-status">
                                            @if (item.IsPublished)
                                            {
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle icon check-circle">
                                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                                </svg>
                                            }
                                            else
                                            {
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle icon x-circle">
                                                    <circle cx="12" cy="12" r="10"></circle>
                                                    <line x1="15" y1="9" x2="9" y2="15"></line>
                                                    <line x1="9" y1="9" x2="15" y2="15"></line>
                                                </svg>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit" title="Edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" class="d-inline" method="post" onsubmit="return confirm('Are you sure you want to delete this subcategory?');">
                                                <a href="javascript:void(0)" onclick="$(this).closest('form').submit()">
                                                    <i class="fa fa-trash text-danger" title="Delete"></i>
                                                </a>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function clearSearch() {

        window.location.href = '@Url.Action("Index")';
    }
</script>

